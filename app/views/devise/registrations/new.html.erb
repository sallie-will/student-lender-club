<!--=== Content Part ===-->
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: "reg-page") do |f| %>
        <div class="reg-header">
            <h2>Register a new account</h2>
            <p>Already Signed Up? Click <a href="page_login.html" class="color-green">Sign In</a> to login your account.</p>                    
        </div>
        
          <%= devise_error_messages! %>
        <label>First Name</label>
        <%= f.text_field :first_name, class: "form-control margin-bottom-20" %>
       
        <label>Last Name</label>
        <%= f.text_field :last_name, class: "form-control margin-bottom-20" %>
       
        <label>Email Address <span class="color-red">*</span></label>
        <%= f.email_field :email, class: "form-control margin-bottom-20" %>

        <label>Investor or Borrower? <span class="color-red">*</span></label>  
        <%= f.select(:role, ["Borrower", "Investor"],  class: "form-control margin-bottom-20") %>

        <div class="row">
          <div class="col-sm-6">
            <label>Password <span class="color-red">*</span></label>
            <%= f.password_field :password, class: "form-control margin-bottom-20" %>
          </div>
          <div class="col-sm-6">
            <label>Confirm Password <span class="color-red">*</span></label>
            <%= f.password_field :password_confirmation, class: "form-control margin-bottom-20f" %>
          </div>
        </div>        
        <div class="row">
            <div class="col-lg-6">                       
            </div>
            <div class="col-lg-6 text-right">    
                <%= f.submit "Sign Up", class: "btn-u" %>                  
            </div>
        </div>
      <% end %>
      <hr>
    </div>
  </div>
</div><!--/container-->   
<!--=== End Content Part ===-->
