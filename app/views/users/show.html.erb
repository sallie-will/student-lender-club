<p id="notice"><%= notice %></p>

<!--=== Content Part ===-->
<div class="container">   
  <div class="row portfolio-item margin-bottom-50"> 
        <!-- Content Info -->        
        <div class="col-md-6 md-margin-bottom-40">
          <% if @user.role = "borrower" %>
            <h1>Student Profile</h1>
          <% else @user.role = "investor"%>
            <h1>Investor Profile</h1>
          <% end %>
            <h2><%= @user.first_name %> <%= @user.last_name %></h2>
                 <p>Location: <strong><%= @user.city %></strong></p>
              <% if @user.undergrad_degree %>
              <p>Undergraduate Degree: <strong><%= @user.undergrad_degree %></strong></p>
              <% end %>
              <% if @user.graduate_degree %>
              <p>Graduate Degree: <strong><%= @user.graduate_degree %></strong></p>
              <% end %>
              <% if @user.employer %>
              <p>Employer: <strong><%= @user.employer %></strong></p>
              <% end %>
              <% if @user.gender %>
              <p>Gender: <strong><%= @user.gender %></strong></p>
              <% end %>
              <% if @user.ethnicity %>
              <p>Ethnicity: <strong><%= @user.ethnicity %></strong></p>
              <% end %>
              <% if @user.religion %>
              <p>Religion: <strong><%= @user.religion %></strong></p>
              <% end %>
              <p><%= @user.bio %></p>
              <br />
              <%= render "pages/social_media" %>
              <br />           
            <p><a class="btn-u btn-u-large" href="#">Request More Info About Investing</a></p>
        </div>

        <% if current_user == @user %>
          <%= link_to 'Edit Login Information', edit_user_registration_path %> |
          <%= link_to 'Edit Profile', edit_user_path(@user) %> |
          <%= link_to 'Back', users_path %>
        <% end %>
        <!-- End Content Info -->        

        <!-- Carousel -->
        <div class="col-md-6">
          <%= image_tag @user.image, width: "80%" %>
        </div>
        <!-- End Carousel -->
    </div><!--/row-->

    <div class="margin-bottom-20 clearfix"></div>

    <!-- Recent Works -->
    <div class="headline"><h2>Student Loan Needed</h2></div>
    <div class="margin-bottom-40">
      <div class="row">
        <div class="col-md-12">
          <% if current_user %>
            <% if @user.role = "borrower" && @user.loans != nil %>
              <% @user.loans.each do |loan| %>
              <%= loan.amount %>
              <% end %>
              <%= link_to "Invest in this Student", new_user_investment_path(user_id: current_user.id), class: "btn-u" %>
            <% else @user.role = "investor" && @user.investments != nil %>
              <h3>Student Loans Investments</h3>
              <% @user.investments.each do |investment| %>
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title"><%= message.created_at.to_formatted_s(:long) %></h3>
                </div>
                <div class="panel-body">
                  <strong><%= investment.amount %> to support the education of <%= investment.user.first_namae + " " + investor.user.last_name %></strong>
                  <p><%=message.content%></p>
                </div>
              </div>
              <% end %>
            <% end %>
          <% else %>
            <p><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Login", new_user_session_path %> to learn more about how you can help <%= @user.name %> achieve their goals.</p>
          <% end %>

        </div>
      </div>
    </div>

  <!-- Recent Works -->
    <div class="headline"><h2>Student Highlights</h2></div>
    <div class="margin-bottom-40">
      <div class="row">
        <div class="col-md-4">
         
              <span>
                  <h4><strong>Academic Performance</strong></h4>
                  <p>< @user.academic_performance ></p>
              </span>
          </a>
        </div>
        <div class="col-md-4">

              <span>
                <h4><strong>Earning Potential</strong></h4>
                <p>< @user.earning_potential ></p>
              </span>
          </a>
        </div>
        <div class="col-md-4">

              <span>
                  <h4><strong>Credit History</strong></h4>
                  <p>< @user.credit_history ></p>
              </span>
          </a>
        </div>
      </div><!--/row-->
    </div>
                 
  <!-- End Recent Works -->                



  </div><!--/container-->   
  <!--=== End Content Part ===-->
