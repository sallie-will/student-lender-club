  <!-- Recent Works -->
    <div class="headline"><h2>Recent Works</h2></div>
    <div class="row">
      <% @users.each do |student| %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnails thumbnail-style thumbnail-kenburn">
              <div class="thumbnail-img">
                  <div class="overflow-hidden">
                      <%= image_tag "main2.jpg", width: "100%" %>
                  </div>
                  <a class="btn-more hover-effect" href="#">read more +</a>         
                </div>
                <div class="caption">
                    <h3><%= link_to student.first_name, user_path(student), class: "hover-effect" %></h3>
                    <p><%= student.bio %></p>
                    <p><%= link_to image_tag("linkedin.png"), student.linkedin %>  | 
                        <%= link_to raw("<i class=\"icon-facebook icon-large\"> </i>"), student.facebook %>  |
                        <%= link_to raw("<i class=\"icon-twitter icon-large\"> </i>"), student.twitter %></p>
                </div>
            </div>
        </div>
      <% end %>
    </div><!--/row-->
  <!-- End Recent Works -->