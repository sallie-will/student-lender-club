  <!-- Recent Works -->
    <div class="headline"><h2>Featured Students</h2>
    </div>
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnails thumbnail-style thumbnail-kenburn">
              <div class="thumbnail-img">
                  <div class="overflow-hidden">
                      <%= image_tag user.image, width: "100%" %>
                  </div>
                  <%= link_to "Read More +", user_path(user), class: "btn-more hover-effect" %>     
              </div>
              <div class="caption">
                  <h3><%= link_to user.first_name, user_path(user), class: "hover-effect" %></h3>
                  <p><%= user.bio %> <strong><%= link_to "Read More...", user_path(user) %></strong></p>
              </div>
            </div>
        </div>
      <% end %>
    </div><!--/row-->
  <!-- End Recent Works -->